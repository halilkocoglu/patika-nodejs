<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
 <%- include('partials/_nav') -%>
  

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Edit Post</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form method="POST" action="/post/<%= post._id %>?_method=PUT" novalidate>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <h6>Post Title</h6>
              <input 
              type="text" 
              name="title" 
              value="<%= post.title %>" 
              class="form-control" 
              placeholder="Title" 
              id="name" 
              required data-validation-required-message="Please enter your name."
              >
              <p class="help-block text-danger"></p>
            </div>
            <div class="form-group floating-label-form-group controls">
              <label>Post Description</label>
              <h6>Post Description</h6>
              <input 
              type="text" 
              name="desc" 
              value="<%= post.desc %>" 
              class="form-control" 
              placeholder="Description" 
              id="name" 
              required data-validation-required-message="Please enter your name."
              >
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Detail</label>
              <h6>Post Detail</h6>
              <textarea rows="5" class="form-control" placeholder="Your Post" id="message"  name="post" required data-validation-required-message="Please enter a message."><%= post.post %></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Save</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>
</body>

</html>
